/* pages/home/index.wxss */

.swiper_box {
  width: 100%;
}

swiper-item image {
  width: 100%;
  height: 100%;
  display: inline-block;
  overflow: hidden;
}

.venues_box {
  padding: 0 10rpx;
}

.venues_item {
  display: inline-block;
  width: 49%;
  margin: 0 0.5%;
}

.venues_item image {
  width: 100%;
  height: 90px;
}

.venues_item discountDesc {
  float: right;
  margin-right: 10px;
  font-size: 15px;
  color: red;
}

view.text {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 10px 10px 10px 12px;
  font-size: 15px;
  color: #656565;
}

view.text:before {
  position: absolute;
  display: block;
  content: ' ';
  left: -5px;
  width: 2px;
  height: 100%;
  background-color: #09bb07;
}

.line_flag {
  width: 3px;
  height: 15px;
  display: inline-block;
  background-color: #f9f027;
}

view.text titletext {
  flex: 1;
  margin-left: 10px;
  line-height: 18px;
  font-weight: bold;
}

view.text moreBtn {
  padding-right: 10px;
  width: 30px;
  color: red;
  line-height: 18px;
  font-weight: bold;
}
