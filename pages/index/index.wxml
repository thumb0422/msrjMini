<!--index.wxml-->
<view class="container">
  <view>
    <swiper class="swiper_box" indicator-dots="{{indicatorDots}}" vertical="{{vertical}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" bindchange="swiperchange">
      <block wx:for="{{images}}" wx:key="id">
        <swiper-item>
          <image src="{{item.picurl}}" class="slide-image" />
          <!-- <text>{{item.name}}</text>  -->
        </swiper-item>
      </block>
    </swiper>
  </view>
  <view class="text">
    <view class="line_flag"></view>
    <text>经典款</text>
  </view>

  <view class="venues_box">
    <view class="venues_list">
      <block wx:for="{{ClassicItems}}" wx:key="id">
        <view class="venues_item">
          <image src="{{item.pic}}" />
          <text>{{item.name}}</text>
        </view>
      </block>
    </view>
  </view>

  <view class="text">
    <view class="line_flag"></view>
    <text>中国风</text>
  </view>

  <view class="venues_box">
    <view class="venues_list">
      <block wx:for="{{ChineseItems}}" wx:key="id">
        <view class="venues_item">
          <image src="{{item.pic}}" />
          <text>{{item.name}}</text>
        </view>
      </block>
    </view>
  </view>

  <view class="text">
    <view class="line_flag"></view>
    <text>欧美风</text>
  </view>

  <view class="venues_box">
    <view class="venues_list">
      <block wx:for="{{EuropeanItems}}" wx:key="id">
        <view class="venues_item">
          <navigator url="../detail/detail?id={{item.id}}">
            <image src="{{item.pic}}" />
            <text>{{item.name}}</text>
          </navigator>
        </view>
      </block>
    </view>
  </view>
</view>